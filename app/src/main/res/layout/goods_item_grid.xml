<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_goods_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="#fff"
    android:padding="5dp">
    <!--<ImageView-->
    <!--android:id="@+id/img_goodsImg"-->
    <!--android:layout_width="100dp"-->
    <!--android:layout_height="100dp"-->
    <!--android:background="#fff"/>-->

    <android.support.v7.widget.CardView
        android:id="@+id/cv_goodsImg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/translucent_background"
        android:layout_marginTop="3dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:padding="5dp">
            <ImageView
                android:id="@+id/img_goodsImg"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_centerHorizontal="true"
                android:background="@drawable/avatar_loading"/>

            <TextView
                android:id="@+id/tv_goodsId"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/tv_goodsId1"
                android:text="goodsid"
                android:textSize="15sp"
                android:layout_below="@id/img_goodsImg"/>

            <TextView
                android:id="@+id/tv_goodsId1"
                android:layout_width="40dp"
                android:layout_height="18dp"
                android:layout_toRightOf="@+id/v1"
                android:text="编号："
                android:textSize="12sp"
                android:layout_below="@id/img_goodsImg"/>


            <TextView
                android:id="@+id/tv_goodsName"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_below="@+id/tv_goodsId"
                android:layout_toRightOf="@+id/tv_goodsName1"
                android:text="goodsname"
                android:singleLine="false"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_goodsName1"
                android:layout_width="40dp"
                android:layout_height="18dp"
                android:layout_alignBaseline="@+id/tv_goodsName"
                android:layout_alignBottom="@+id/tv_goodsName"
                android:layout_toRightOf="@+id/v1"
                android:text="名称："
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_yuan"
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_below="@+id/tv_goodsName"
                android:text="￥"
                android:gravity="bottom"
                android:layout_toRightOf="@+id/tv_goodsPrice1"
                android:textColor="#fbf9cc04"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_goodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_below="@+id/tv_goodsName"
                android:layout_toRightOf="@+id/tv_goodsPrice1"
                android:layout_marginLeft="10dp"
                android:text="price"
                android:textColor="#fbf9cc04"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/tv_goodsPrice1"
                android:layout_width="40dp"
                android:layout_height="18dp"
                android:layout_alignBaseline="@+id/tv_goodsPrice"
                android:layout_alignBottom="@+id/tv_goodsPrice"
                android:layout_toRightOf="@+id/v1"
                android:text="单价："
                android:textSize="12sp"/>




            <TextView
                android:id="@+id/tv_goodsUnit"
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_below="@+id/tv_goodsPrice"
                android:layout_toRightOf="@+id/tv_goodsUnit1"
                android:text="unit"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_goodsUnit1"
                android:layout_width="40dp"
                android:layout_height="18dp"
                android:layout_below="@+id/tv_goodsPrice1"
                android:layout_toRightOf="@+id/v1"
                android:text="单位："
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/tv_goodsQuantity"
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_below="@+id/tv_goodsUnit"
                android:layout_toRightOf="@+id/tv_goodsQuantity1"
                android:text="quanlity"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_goodsQuantity1"
                android:layout_width="40dp"
                android:layout_height="18dp"
                android:layout_below="@+id/tv_goodsUnit1"
                android:layout_toRightOf="@+id/v1"
                android:text="数量："
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_goodsQq"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_below="@+id/tv_goodsQuantity"
                android:layout_toRightOf="@+id/tv_goodsQq1"
                android:text="qq"
                android:textColor="#000"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_goodsQq1"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_below="@+id/tv_goodsQuantity1"
                android:layout_toRightOf="@+id/v1"
                android:text="QQ："
                android:textSize="12sp"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
