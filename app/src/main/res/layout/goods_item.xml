<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="110dp"
              android:background="#eae7e7">

    <ImageView
        android:id="@+id/img_goodsImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#fff"/>

    <!--<RelativeLayout-->
        <!--android:layout_width="10dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:background="#000">-->

    <!--</RelativeLayout>-->

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_goodsImg"
        android:layout_toEndOf="@+id/img_goodsImg">

        <View
            android:id="@+id/v1"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="#fff"/>

        <TextView
            android:id="@+id/tv_goodsId"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="goodsid"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/tv_goodsId1"/>
            <TextView
                android:id="@+id/tv_goodsId1"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="商品编号："
                android:textSize="15sp"
                android:layout_toRightOf="@+id/v1"/>



        <TextView
            android:id="@+id/tv_goodsName"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="goodsname"
            android:textSize="15sp"
            android:layout_below="@+id/tv_goodsId"
            android:layout_toRightOf="@+id/tv_goodsName1"/>
            <TextView
            android:id="@+id/tv_goodsName1"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="商品名称："
            android:textSize="15sp"
            android:layout_toRightOf="@+id/v1"
            android:layout_alignBaseline="@+id/tv_goodsName"
            android:layout_alignBottom="@+id/tv_goodsName"/>


        <TextView
            android:id="@+id/tv_goodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="price"
            android:textSize="15sp"
            android:layout_below="@+id/tv_goodsName"
            android:layout_toRightOf="@+id/tv_goodsPrice1"/>
        <TextView
            android:id="@+id/tv_goodsPrice1"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="商品单价："
            android:textSize="15sp"
            android:layout_toRightOf="@+id/v1"
            android:layout_alignBaseline="@+id/tv_goodsPrice"
            android:layout_alignBottom="@+id/tv_goodsPrice"/>


        <TextView
            android:id="@+id/tv_yuan"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="元"
            android:textSize="15sp"
            android:layout_below="@+id/tv_goodsName"
            android:layout_toRightOf="@+id/tv_goodsPrice"/>

        <TextView
            android:id="@+id/tv_goodsUnit"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="unit"
            android:textSize="15sp"
            android:layout_below="@+id/tv_goodsPrice"
            android:layout_toRightOf="@+id/tv_goodsUnit1"/>
        <TextView
            android:id="@+id/tv_goodsUnit1"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="商品单位："
            android:textSize="15sp"
            android:layout_below="@+id/tv_goodsPrice1"
            android:layout_toRightOf="@+id/v1"/>


        <TextView
            android:id="@+id/tv_goodsQuantity"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="quanlity"
            android:textSize="15sp"
            android:layout_below="@+id/tv_goodsUnit"
            android:layout_toRightOf="@+id/tv_goodsQuantity1"/>
        <TextView
            android:id="@+id/tv_goodsQuantity1"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="商品数量："
            android:textSize="15sp"
            android:layout_below="@+id/tv_goodsUnit1"
            android:layout_toRightOf="@+id/v1"/>

    </RelativeLayout>

</RelativeLayout>