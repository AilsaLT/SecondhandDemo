<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#0895e7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我"
            android:textColor="#FFF"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/iv_set"
            android:clickable="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/me_t6"/>

    </RelativeLayout>
    <!--未登录时显示-->
    <RelativeLayout
        android:id="@+id/rl_deng"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#fff"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_deng"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/me_denglu"
            android:clickable="true"/>

        <TextView
            android:id="@+id/tv_deng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"
            android:text="点击登陆"
            android:textColor="#b6adad"
            android:textSize="20sp"/>

    </RelativeLayout>

    <!--登录成功时显示-->
    <RelativeLayout
        android:id="@+id/rl_deng1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#fff"
        android:clickable="true">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_deng1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/me_denglu"
            android:clickable="true"/>
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_deng1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="okk"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/tv_nickname"
            android:textColor="#049ef7"
            android:textStyle="italic"
            android:textSize="18sp"/>

    </RelativeLayout>
    <!--我的摊位-->
    <RelativeLayout
        android:id="@+id/rl_booth"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:clickable="true">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/me_t2"/>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的摊位"
            android:textColor="#201f1f"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/imageView1"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <View
        android:layout_height="1dp"
        android:layout_width="330dp"
        android:layout_marginLeft="50dp"
        android:background="#eae7e7">
    </View>
    <!--我的求购-->
    <RelativeLayout
        android:id="@+id/rl_buy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:clickable="true">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/me_t3"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的求购"
            android:textColor="#201f1f"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_height="1dp"
        android:layout_width="330dp"
        android:layout_marginLeft="50dp"
        android:background="#eae7e7">
    </View>
    <!--我的收藏-->
    <RelativeLayout
        android:id="@+id/rl_colection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:clickable="true">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/me_t4"/>
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:textColor="#201f1f"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>


    </RelativeLayout>
    <View
        android:layout_height="1dp"
        android:layout_width="330dp"
        android:layout_marginLeft="50dp"
        android:background="#eae7e7">
    </View>
    <!--关于我们-->
    <RelativeLayout
        android:id="@+id/rl_me"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:clickable="true">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/me_t5"/>
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textColor="#201f1f"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>


    </RelativeLayout>
    <View
        android:layout_height="1dp"
        android:layout_width="330dp"
        android:layout_marginLeft="50dp"
        android:background="#eae7e7">
    </View>
    <RelativeLayout
        android:id="@+id/rl_set"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#fff"
        android:clickable="true">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#fff"
        android:clickable="true">

    </RelativeLayout>

</LinearLayout>
